---
import SectionMenu from "../components/SectionMenu.astro";
import Layout from "../layouts/Layout.astro";
import logo from "../assets/logo.webp"
---
<Layout>
    <div class="tool-bar flex items-center justify-center">
        <img src={logo.src} alt="logo vaca tuerta">
    </div>
    <div class="content-menu">
        <div class="section-title">
            <h2>Nuestro Men√∫</h2>
        </div>
        <SectionMenu></SectionMenu>
    </div>
</Layout>
<style>
    .tool-bar{
        padding: 1rem 5rem;
       
    }
    img{
        max-width: 180px;
    }

    .section-title {
            text-align: center;
            margin-bottom: 3rem;
        }
        
        .section-title h2 {
            font-size: 2.5rem;
            color: var(--color-text);
            position: relative;
            display: inline-block;
            padding-bottom: 0.5rem;
        }
        
        
    .content-menu{

        padding: 0 1rem;
        padding-top: 2rem;
    }
    @media (max-width:500px) {
        .tool-bar img{
            max-width: 160px;
        }
        .section-title{
            margin-bottom: 1rem;
        }
     .section-title h2{
        font-size: 1.8rem;
     }   
    }
</style>